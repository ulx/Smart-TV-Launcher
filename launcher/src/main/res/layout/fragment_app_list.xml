<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="16dp"
                tools:context="com.ryanharter.atv.launcher.ui.LauncherActivity$PlaceholderFragment">

    <com.ryanharter.atv.launcher.widget.TextClock
            android:id="@+id/clock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="24dp"
            android:padding="8dp"
            android:background="@drawable/bg_clock"/>

    <ImageButton
            android:id="@+id/expand_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/clock"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:src="@drawable/ic_allapps"
            android:background="@null"/>

    <LinearLayout
            android:id="@+id/favorite_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/expand_button"
            android:layout_alignParentRight="true"
            android:orientation="horizontal"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp">

    </LinearLayout>

    <GridView
            android:id="@+id/app_grid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/expand_button"
            android:layout_below="@id/favorite_bar"
            android:layout_margin="8dp"
            android:layout_marginTop="16dp"
            android:numColumns="5"
            android:gravity="center_horizontal"
            android:verticalSpacing="16dp"
        android:visibility="gone"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_margin="8dp"
        android:layout_marginTop="16dp"
        android:layout_toRightOf="@id/expand_button"
        android:layout_below="@id/favorite_bar"
        android:layout_centerVertical="true">

        <it.sephiroth.android.library.widget.HListView
            android:id="@+id/app_list"
            android:layout_width="match_parent"
            android:layout_height="200dip"
            android:paddingTop="20dip"
            android:paddingBottom="20dip"
            android:background="#11000000"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
    </RelativeLayout>


</RelativeLayout>
